{
  "name": "lumefi-contracts",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf './artifacts/' && rm -rf './build/' && rm -rf './cache/' && rm -rf './coverage/' && rm -rf './coverage.json' && rm -rf './typechain/'",
    "compile": "hardhat compile",
    "console": "hardhat console",
    "deploy-main": "hardhat --network cronos deploy",
    "deploy-test": "hardhat --network bsctestnet deploy",
    "export": "hardhat export --export-all exports/deployments.json",
    "export-main": "hardhat --network cronos export --export exports/cronos.json",
    "export-test": "hardhat --network bsctestnet export --export exports/bsctestnet.json",
    "flat:contracts": "sol-merger 'contracts/**/*.sol' ./build/contracts-flat",
    "format-code": "yarn prettier --write --plugin=prettier-plugin-solidity",
    "lint": "solhint -c .solhint.json contracts/**/*.sol",
    "size": "yarn hardhat size-contracts",
    "test": "mocha",
    "test:coverage": "cross-env NODE_OPTIONS=\"--max-old-space-size=2048\" mocha",
    "test:gas": "cross-env REPORT_GAS=true yarn test",
    "verify": "hardhat etherscan-verify",
    "verify-main": "hardhat --network cronos etherscan-verify --solc-input",
    "verify-test": "hardhat --network bsctest etherscan-verify --solc-input"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "ethers": "6"
  },
